@model GatheringDay.Models.Reservation
@{
    ViewBag.Title = "Checkout";
}

<h2>Checkout</h2>

<div class="book">
    <div class="about-area   cover">
        <div class="container">

            <div class="row">
                <div class="col-lg-7" id="row2">

                    <div class="about-text2  reserv">
                        <h2>Checkout</h2>
                        </br>

                        <h4 style="color:darkblue; border:1px solid darkblue;  margin-left: 60%; padding: 2%; padding-left: 10%;"><span> @Html.DisplayFor(w => w.Price) </span>KD </h4>
                        <form action="/Home/Done">
                            <div class="form-group row">
                                <fieldset class="form-group" >

                                    <div class="form-check">
                                        <label class="form-check-label" style="color: dimgray;">
                                            <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios1" value="option1" checked>
                                            New Payment Card
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label" style="color: dimgray;">
                                            <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios2" value="option2">
                                            K-NET
                                        </label>
                                    </div>
                                    <div class="form-check disabled">
                                        <label class="form-check-label" style="color: dimgray;">
                                            <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios3" value="option3">
                                            Pay by Mobile Using Local   Methods
                                        </label>
                                    </div>
                                </fieldset>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder=" Card Name"  required>
                                </div>
                                <div class="col-sm-9">

                                    <input type="number" class="form-control" id="inputEmail4" placeholder="Card Number " required>
                                </div>

                                <div class="col-sm-9">
                                    <input class="form-control" type="date" value="08-19" id="example-date-input" placeholder="MM/YY" required>
                                </div>
                                <div class="col-sm-9">

                                    <input type="number" class="form-control" id="inputEmail4" placeholder="Security Code " required>
                                </div>



                                <div class="col-sm-9">
                                    <input type="number" class="form-control" id="inputEmail4" placeholder="Zip/Postal Code" required>

                                </div>

                                <div class="col-sm-9">

                                    <button type="submit" class="btn btn-primary">Pay Now </button>
                                </div>

                            </div>
                        </form>
                        <!-- <a style="color:white;"> Go To Events</a>-->
                    </div>
                </div>



            </div>

        </div>

    </div>
</div>
        </div>